<!doctype html>
<html lang="en">
    <style>
        .wrapper {
            display: flex;
            flex-direction: column;
        }

        .headerContainer {
            border-bottom: 1px solid gray;
            padding-bottom: 5px;
        }

        .menuList {
            display: flex;
            gap: 15px;
        }

        .aTag {
            display: flex;
            align-items: end;
            gap: 12px;
        }

        .aTag,
        a {
            text-decoration: none;
            color: black;
            font-weight: bold;
        }

        .bodyContainer {
            display: flex;
            flex-direction: row;
            align-items: center;
        }

        .sidebarContainer {
            display: flex;
            flex-direction: column;
            gap: 10px;
            border: 1px solid black;
            border-radius: 5px;
            width: 100px;
            height: 200px;
        }

        .topContainer {
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
        }

        .tabContainer {
            width: 100%;
            height: 350px;
        }

        .tabContainer .buttonContainer {
            height: 15%;
        }

        .tabContainer .buttonContainer button {
            width: 25%;
            height: 100%;
            float: left;
            border: none;
            outline: none;
            cursor: pointer;
            padding: 10px;
            background-color: #eee;
        }

        .tabContainer .buttonContainer button:hover {
            background-color: #d7d4d4;
        }

        .tabContainer .tabPanel {
            border: 1px solid red;
            height: 85%;
            background-color: gray;
            color: black;
            box-sizing: border-box;
            display: none;
        }

        .checkboxAll {
            display: flex;
        }

        .allUserTable,
        .standbyUserTable {
            display: flex;
            border: 1px solid black;
            background-color: lightgray;
            text-align: center;
            justify-content: center;
            gap: 50px;
        }
    </style>
    
    <body>
        <div class=".wrapper">
            <div class="headerContainer">
                <div class="menuList">

                    <img
                        src="images/sesachublogowithtitle.png"
                        alt="sesachub image"
                        style="width: 80px; height: 80px"
                    />
                    <div class="aTag">
                        <a href="">예약하기</a>
                        <a href="">커뮤니티</a>
                    </div>
                </div>
            </div>
            <div class="bodyContainer">
                <div class="section1Container">
                    <div class="sidebarContainer">
                        <a href="">예약 관리</a>
                        <a href="">게시판 관리</a>
                        <a href="">회원 관리</a>
                    </div>
                </div>
                <div class="section2Container">
                    <div class="topContainer">
                        <h2>회원 관리</h2>
                        <div class="searchContainer">
                            <input type="search" placeholder="검색하기" />
                            <button>이름 검색</button>
                        </div>
                    </div>
                    <div class="tabContainer">
                        <div class="buttonContainer">
                            <button onclick="showPanel(0, 'white')">전체 학생</button>
                            <button onclick="showPanel(1, 'white')">승인 대기 학생</button>
                        </div>
                        <div class="tabPanel allUserContainer">
                            <div class="allUserTable">
                                <div class="checkboxAll">
                                    <input type="checkbox" />
                                    <div>전체삭제</div>
                                </div>
                                <div>아이디</div>
                                <div>이름</div>
                                <div>연락처</div>
                                <div>이메일</div>
                                <div>소속</div>
                            </div>
                        </div>
                        <div class="tabPanel standbyUserContainer">
                            <div class="standbyUserTable">
                                <div>stanbyme</div>
                                <div>stanbyyou</div>
                                <div>standbywe</div>
                                <div>이메일</div>
                                <div>소속</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script src="myPage.js"></script>
    </body>
</html>
