<!DOCTYPE html>
<html lang="en">
    <%- include("../include/include", {title: "로그인 및 회원가입"})%>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/static/css/profile/confirmation.css">
<body>
    <%-include("../include/header")%>
    <div class="body_container">
      <%-include("../include/sideBar")%>
      <div class="section2_container">
        <div class="title">예약 관리</div>
        <!-- ///검색조건 박스 -->
        <div class="table_box">
          <table>
            <thead>
                <tr>
                  <th class="check_all">
                    <input type="checkbox" name="checkbox" id="checkAll"/>
                  </th>
                  <th>No.</th>
                  <th>예약 장소</th>
                  <th>예약 시간</th>
                  <th>예약 인원</th>
                  <th>삭제</th>
                </tr>
            </thead>
             <tbody> 
               <% reservationData.forEach(reservation => { %>
                  <tr>
                    <td class="check_all">
                      <input type="checkbox" name="checkbox" class="check-option" data-r-id="<%= reservation.r_id %>" data-u-id="<%= reservation.u_id %>" />
                    </td>
                    <td><%= reservation.r_id%></td>
                    <td><%= reservation.st_room %></td>
                    <td>
                      <%if(reservation.time < 10){%>
                        <div><%= `0${reservation.time}:00 ~ ${Number(reservation.time) + 1}:00` %></div>
                      <%} else {%>
                        <div><%= `${reservation.time}:00 ~ ${Number(reservation.time) + 1}:00` %></div>
                      <%}%>
                    </td>
                    <td><%= reservation.count %></td>
                    <td>
                      <button class="delete_button" onclick="deleteButton(this, '<%= reservation.r_id%>','<%= reservation.u_id%>')">삭제</button>
                    </td>
                  </tr>
                <%})%>
              </tbody>
            </table>
            <div class="pagination"> < 1,2,3,3,4,5> </div>
          </div>
          <div class="confirmation_btn_container">
            <button class="delete_all_btn" onclick="deleteAllCheckedBtn()">예약 취소</button>
          </div>
        </div>
      </div>
    </div>
    <script src="/static/js/profile/confirmation.js"></script>
  </body>
</html>